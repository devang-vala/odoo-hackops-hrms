model User {
  id             String          @id @default(cuid())
  name           String
  email          String          @unique
  password       String?           // null for Google OAuth users
  role           UserRole        @default(EMPLOYEE)
  googleId       String?         @unique

  // Company & Employment Info
  companyName    String?
  companyLogo    String?         // Cloudinary URL
  joiningYear    Int?
  serialNumber   Int?

  // Password Management
  isFirstLogin   Boolean         @default(true)
  
  // Minimal HRMS fields
  employeeId     String?         @unique  // Employee ID for HRMS
  phone          String?

  // Leave Balance
  paidLeaveBalance    Int @default(20)
  sickLeaveBalance    Int @default(10)
  casualLeaveBalance  Int @default(12)
  
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  
  // Relations
  passwordResets PasswordReset[]
  attendances    Attendance[]
  leaves         Leave[]
  approvedLeaves Leave[]         @relation("ApprovedLeaves")
  salaryInfo              SalaryInfo?                  // ✅ Add
  employeeSalaryComponents EmployeeSalaryComponent[]  // ✅ Add
  calculatedSalaries      CalculatedSalary[] 
}