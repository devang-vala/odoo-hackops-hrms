generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  EMPLOYEE 
  HR       
}

enum LeaveType {
  PAID
  SICK
  UNPAID
  CASUAL
}

enum LeaveStatus {
  PENDING
  APPROVED
  REJECTED
  CANCELLED
}

enum AttendanceStatus {
  PRESENT
  ABSENT
  HALF_DAY
  LEAVE
  WEEKEND
  HOLIDAY
}

enum ComponentCategory {
  EARNING     // Additions (Basic, HRA, Allowances)
  DEDUCTION   // Subtractions (PF, Tax)
}

enum ComputationType {
  PERCENTAGE  // Calculate as % of base
  FIXED       // Fixed amount
}

enum PercentageBase {
  WAGE   // % of total monthly wage
  BASIC  // % of basic salary component
}